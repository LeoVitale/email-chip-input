{
  "name": "react-email-chip-input",
  "version": "1.0.0",
  "type": "module",
  "description": "A fully customizable, accessible email chip input component for React with keyboard navigation, email validation, and autocomplete support.",
  "author": "Leonardo Vitale",
  "license": "MIT",
  "keywords": [
    "react",
    "email",
    "input",
    "chip",
    "tag",
    "chips",
    "tags",
    "email-input",
    "multi-email",
    "autocomplete",
    "typeahead",
    "accessible",
    "a11y",
    "form",
    "typescript"
  ],
  "homepage": "https://github.com/leonardovitale/react-email-chip-input#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leonardovitale/react-email-chip-input.git"
  },
  "bugs": {
    "url": "https://github.com/leonardovitale/react-email-chip-input/issues"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run lint && pnpm run test --run && pnpm run build:lib",
    "prepack": "pnpm run build:lib",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
